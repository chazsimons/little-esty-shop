<h1>Current Discounts</h1>
<hr>
<br>
<h4>Upcoming Holidays</h4>
<section id="upcoming_holidays">
<% @holidays.each do |holiday| %>
  <p><%= holiday.name %> arrives <%= holiday.date %></p>
<% end %>
</section>
<br>
<%= link_to "Create New Discount", "/merchants/#{@merchant.id}/discounts/new" %>
<br>
<br>
<section id="discounts_list">
<% @discounts.each do |discount| %>
  <section id="show-<%= discount.id %>"
    <p>Percentage: <%= (discount.percentage * 100)%>%</p>
    <p>Quantity Necessary: <%= discount.threshold %></p>
  <%= link_to "Discount Details", "/merchants/#{discount.merchant.id}/discounts/#{discount.id}" %><br>
  <%= link_to "Delete Discounts", "/merchants/#{discount.merchant_id}/discounts/#{discount.id}/destroy", method: :delete %>
  </section>
<% end %>
</section>
