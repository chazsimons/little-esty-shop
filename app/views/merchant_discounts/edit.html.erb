<h1>Update Discount Details</h1>

<%= form_with url: "/merchants/#{@discount.merchant_id}/discounts/#{@discount.id}", method: :patch do |f| %>
<%= f.label :percentage, "Percentage:" %>
<%= f.number_field :percentage, value: @discount.percentage, step: 0.05 %><br>
<%= f.label :threshold %>
<%= f.number_field :threshold, value: @discount.threshold, step: 1 %><br>
<%= f.submit "Update Discount Details" %>
<% end %>
